FROM resin/armv7hf-debian:jessie

RUN apt-get update&& apt-get install \
    bash \
    git  \
    iproute \
    iputils-ping  \
    module-init-tools && \
    git clone -b resin-debian https://github.com/pjb304/ic880a-gateway.git && \
    cd ic880a-gateway && \
    git pull && \
    ./install.sh remote


WORKDIR /opt/ttn-gateway/bin

CMD modprobe i2c-dev && hwclock -r && ./start.sh
