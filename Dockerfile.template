FROM resin/armv7hf-debian:jessie

RUN apt-get update && apt-get install \
    bash \
    build-essential \
    git  \
    gpsd \
    gpsd-clients \
    iproute \
    iputils-ping  \
    module-init-tools \
    ntpd \
    openssh-client \
    python-dev \
    python-openssl && \
    git clone -b resin-debian https://github.com/computenodes/ic880a-gateway.git && \
    cd ic880a-gateway && \
    git pull && \
    ./install.sh remote && \
    apt-get clean && \ 
    rm -rf /var/lib/apt/lists/*

WORKDIR /opt/ttn-gateway/bin

CMD ./start.sh
